# Add these optimizations to your .env file for better performance

# Database Query Optimization
DB_CHUNK_SIZE=100
PAGINATION_LIMIT=9
MAX_SEARCH_RESULTS=50

# Cache Configuration
CACHE_DRIVER=file
CACHE_COURSES_DURATION=3600
CACHE_CATEGORIES_DURATION=7200
CACHE_TRENDING_DURATION=1800
CACHE_INSTRUCTORS_DURATION=3600

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Image Optimization
ENABLE_LAZY_LOADING=true
PLACEHOLDER_IMAGE=images/course-placeholder.jpg
THUMBNAIL_CACHE_ENABLED=true

# Frontend Performance
SEARCH_DEBOUNCE_DELAY=1000
ANIMATION_DURATION=300
INTERSECTION_MARGIN=100px

# Queue Configuration (for better performance)
QUEUE_CONNECTION=sync

# Logging (reduce logging in production)
LOG_LEVEL=error

# Mail Configuration (async for better performance)
MAIL_MAILER=smtp

# Asset Optimization
MIX_APP_URL="${APP_URL}"

# Performance Monitoring
DEBUGBAR_ENABLED=false